{
    "manifest_version": 3,
    "name": "PhishAgent - AI Phishing Detector",
    "version": "1.0.0",
    "description": "Real-time AI-powered phishing detection for websites",
    "permissions": [
      "activeTab",
      "storage",
      "webNavigation"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }